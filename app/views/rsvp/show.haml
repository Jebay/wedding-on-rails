    <script type="text/javascript" src="http://app.rsvpify.com/embed/50765"></script>
    <script type="text/javascript" src="http://app.rsvpify.com/js/iframeResizer.min.js"></script>
    <script type="text/javascript">
    
        iFrameResize({autoResize: true,heightCalculationMethod: 'max',enablePublicMethods: true}, "#RSVPifyIFrame");
        
        function resize() {
            var heights = window.innerHeight;
            document.getElementById("RSVPifyIFrame").style.minHeight = heights + "px";
        }
        
        resize();
        window.onresize = function() {
            resize();
        };
    </script>